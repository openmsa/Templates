sudo rm -f /etc/netplan/*.yaml
echo 'network:' >> /etc/netplan/network-conf.yaml
echo '    ethernets:' >> /etc/netplan/network-conf.yaml
echo '        ens3:' >> /etc/netplan/network-conf.yaml
echo '            dhcp4: true' >> /etc/netplan/network-conf.yaml
echo '        ens4:' >> /etc/netplan/network-conf.yaml
echo '            dhcp4: true' >> /etc/netplan/network-conf.yaml
echo '            dhcp4-overrides:' >> /etc/netplan/network-conf.yaml
echo '                use-routes: false' >> /etc/netplan/network-conf.yaml
echo '    version: 2' >> /etc/netplan/network-conf.yaml
sudo netplan apply
hostname=`hostname` && sed -i "s/flexiwan-vnf/$hostname/g" /etc/hosts
